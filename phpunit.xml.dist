<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="./vendor/autoload.php">

    <testsuites>
        <testsuite name="Silvestra Test Suite">
            <directory>./src/Silvestra/Bundle/*/Tests/</directory>
            <directory>./src/Silvestra/Bundle/*/*/Tests/</directory>
            <directory>./src/Silvestra/Component/*/Tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/Silvestra/</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./src/Silvestra/Bundle/*/Tests</directory>
                <directory>./src/Silvestra/Bundle/*/Resources</directory>
                <directory>./src/Silvestra/Bundle/*/*/Tests</directory>
                <directory>./src/Silvestra/Bundle/*/*/Resources</directory>
                <directory>./src/Silvestra/Component/*/Tests</directory>
                <directory>./src/Silvestra/Component/*/Resources</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
