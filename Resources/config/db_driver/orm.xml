<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_text_node.manager.text_node.class">Silvestra\Bundle\TextNodeBundle\Doctrine\EntityManager\TextNodeManager</parameter>
    </parameters>

    <services>

        <!--Default TextNode manager-->
        <service id="silvestra_text_node.manager.text_node.default" class="%silvestra_text_node.manager.text_node.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%silvestra_text_node.model.text_node.class%</argument>
        </service>

    </services>
</container>
