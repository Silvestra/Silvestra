<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_media.manager.image.class">Silvestra\Bundle\MediaBundle\Doctrine\EntityManager\ImageManager</parameter>
    </parameters>

    <services>

        <!--Default Image manager-->
        <service id="silvestra_media.manager.image.default" class="%silvestra_media.manager.image.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%silvestra_media.model.image.class%</argument>
        </service>

    </services>
</container>
