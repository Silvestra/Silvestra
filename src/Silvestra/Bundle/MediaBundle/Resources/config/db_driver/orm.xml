<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_media.manager.file.class">Silvestra\Bundle\MediaBundle\Doctrine\EntityManager\FileManager</parameter>
    </parameters>

    <services>

        <!--Default File manager-->
        <service id="silvestra_media.manager.file.default" class="%silvestra_media.manager.file.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%silvestra_media.model.file.class%</argument>
        </service>

    </services>
</container>
