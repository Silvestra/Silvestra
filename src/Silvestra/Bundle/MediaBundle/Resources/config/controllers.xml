<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Silvestra media uploader controller-->
        <service id="silvestra_media.controllers.uploader" class="Silvestra\Bundle\MediaBundle\Controller\UploaderController">
            <argument type="service" id="silvestra_media.image.validator" />
            <argument type="service" id="silvestra_media.handler.uploader" />
        </service>

    </services>

</container>
