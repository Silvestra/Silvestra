<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="silvestra_media.image_config_validator.cropper_coordinates"
                 class="Silvestra\Component\Media\Image\Config\Validator\CropperCoordinatesValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="cropper_coordinates"/>
        </service>

        <service id="silvestra_media.image_config_validator.cropper_enabled"
                 class="Silvestra\Component\Media\Image\Config\Validator\CropperEnabledValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="cropper_coordinates"/>
        </service>

        <service id="silvestra_media.image_config_validator.max_file_size"
                 class="Silvestra\Component\Media\Image\Config\Validator\MaxFileSizeValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="max_file_size"/>
        </service>

        <service id="silvestra_media.image_config_validator.max_height"
                 class="Silvestra\Component\Media\Image\Config\Validator\MaxHeightValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="max_height"/>
        </service>

        <service id="silvestra_media.image_config_validator.max_width"
                 class="Silvestra\Component\Media\Image\Config\Validator\MaxWidthValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="max_width"/>
        </service>

        <service id="silvestra_media.image_config_validator.mime_types"
                 class="Silvestra\Component\Media\Image\Config\Validator\MimeTypesValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="mime_types"/>
        </service>

        <service id="silvestra_media.image_config_validator.min_height"
                 class="Silvestra\Component\Media\Image\Config\Validator\MinHeightValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="min_height"/>
        </service>

        <service id="silvestra_media.image_config_validator.min_width"
                 class="Silvestra\Component\Media\Image\Config\Validator\MinWidthValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="min_width"/>
        </service>

        <service id="silvestra_media.image_config_validator.resize_strategy"
                 class="Silvestra\Component\Media\Image\Config\Validator\ResizeStrategyValidator" public="false">
            <tag name="silvestra_media_image_config_validator" alias="resize_strategy"/>
        </service>

    </services>

</container>
