<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="silvestra_media.filesystem" class="Silvestra\Component\Media\Filesystem">
            <argument>%kernel.root_dir%/../web</argument>
        </service>

        <service id="silvestra_media.handler.uploader" class="Silvestra\Component\Media\Handler\UploaderHandler">
            <argument type="service" id="silvestra_media.filesystem" />
            <argument type="service" id="silvestra_media.image.config" />
            <argument type="service" id="validator" />
        </service>

        <service id="silvestra_media.image.config" class="Silvestra\Component\Media\ImageConfig" />

    </services>

</container>
