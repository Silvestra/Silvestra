<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Silvestra media gallery form type-->
        <service id="silvestra_media.form_type.gallery" class="Silvestra\Component\Media\Form\Type\GalleryType">
            <tag name="form.type" alias="silvestra_media_gallery" />

            <argument type="service" id="silvestra_media.image.default_config" />
        </service>

    </services>

</container>
