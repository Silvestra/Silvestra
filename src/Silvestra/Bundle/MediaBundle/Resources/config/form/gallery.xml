<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_media.form_type.gallery.class">Silvestra\Bundle\MediaBundle\Form\Type\GalleryFormType</parameter>
        <parameter key="silvestra_media.form_type.image.class">Silvestra\Bundle\MediaBundle\Form\Type\ImageFormType</parameter>
    </parameters>

    <services>

        <!--Silvestra media gallery form type-->
        <service id="silvestra_media.form_type.gallery" class="%silvestra_media.form_type.gallery.class%">
            <tag name="form.type" alias="silvestra_media_gallery" />
        </service>

        <!--Silvestra media image form type-->
        <service id="silvestra_media.form_type.image" class="%silvestra_media.form_type.image.class%">
            <tag name="form.type" alias="silvestra_media_image" />
        </service>

    </services>

</container>
