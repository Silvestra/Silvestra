<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_media.form_factory.uploader.class">Silvestra\Bundle\MediaBundle\Form\Factory\UploaderFormFactory</parameter>
        <parameter key="silvestra_media.form_handler.uploader.class">Silvestra\Bundle\MediaBundle\Form\Handler\UploaderFormHandler</parameter>
        <parameter key="silvestra_media.form_type.uploader.class">Silvestra\Bundle\MediaBundle\Form\Type\UploaderFormType</parameter>
        <parameter key="silvestra_media.form_type.file.class">Silvestra\Bundle\MediaBundle\Form\Type\FileFormType</parameter>
    </parameters>

    <services>

        <!--Silvestra media uploader form factory-->
        <service id="silvestra_media.form_factory.uploader" class="%silvestra_media.form_factory.uploader.class%">
            <argument type="service" id="form.factory" />
            <argument type="service" id="router" />
        </service>

        <!--Silvestra media uploader form handler-->
        <service id="silvestra_media.form_handler.uploader" class="%silvestra_media.form_handler.uploader.class%">
            <argument type="service" id="silvestra_media.manager.file" />
        </service>

        <!--Silvestra media uploader form type-->
        <service id="silvestra_media.form_type.uploader" class="%silvestra_media.form_type.uploader.class%">
            <tag name="form.type" alias="silvestra_media_uploader" />
        </service>

        <!--Silvestra media file form type-->
        <service id="silvestra_media.form_type.file" class="%silvestra_media.form_type.file.class%">
            <tag name="form.type" alias="silvestra_media_file" />
            <argument>%silvestra_media.model.file.class%</argument>
        </service>

    </services>

</container>
