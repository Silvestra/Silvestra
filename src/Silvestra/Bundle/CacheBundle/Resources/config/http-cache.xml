<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_cache.http_cache.manager.class">Silvestra\Component\Cache\Http\HttpCacheManager</parameter>
    </parameters>

    <services>

        <service id="silvestra_cache.http_cache.manager" class="%silvestra_cache.http_cache.manager.class%">
            <argument type="service" id="filesystem" />
            <argument>%silvestra_cache.http_cache_dir%</argument>
        </service>
    </services>

</container>
