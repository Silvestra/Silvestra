<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_site.manager.site.class">Silvestra\Bundle\SiteBundle\Doctrine\EntityManager\SiteManager</parameter>
    </parameters>

    <services>

        <!--Default Site manager-->
        <service id="silvestra_site.manager.site.default" class="%silvestra_site.manager.site.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%silvestra_site.model.site.class%</argument>
        </service>

    </services>
</container>
