<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_site.event_listener.admin_menu.class">Silvestra\Bundle\SiteBundle\EventListener\AdminMenuListener</parameter>
    </parameters>

    <services>

        <!--Silvestra admin menu event listener-->
        <service id="silvestra_site.event_listener.admin_menu" class="%silvestra_site.event_listener.admin_menu.class%">
            <tag name="kernel.event_listener" event="silvestra_admin.menu" method="onAdminMenu" />
            <argument type="service" id="translator" />
        </service>

    </services>

</container>
