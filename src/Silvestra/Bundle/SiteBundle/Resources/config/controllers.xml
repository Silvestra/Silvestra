<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_site.controller.site.class">Silvestra\Bundle\SiteBundle\Controller\SiteController</parameter>
    </parameters>

    <services>

        <!--Silvestra site controller-->
        <service id="silvestra_site.controller.site" class="%silvestra_site.controller.site.class%">
            <argument type="service" id="silvestra_site.form_factory.site" />
            <argument type="service" id="silvestra_site.form_handler.site" />
            <argument type="service" id="silvestra_site.manager.site" />
            <argument type="service" id="templating" />
            <argument type="service" id="translator" />
        </service>

    </services>
</container>
