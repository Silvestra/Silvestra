<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Silvestra KeyValue form type-->
        <service class="Silvestra\Component\Form\Type\KeyValueType">
            <tag name="form.type" alias="silvestra_key_value" />
        </service>

        <!--Silvestra KeyValueRow form type-->
        <service class="Silvestra\Component\Form\Type\KeyValueRowType">
            <tag name="form.type" alias="silvestra_key_value_row" />
        </service>

    </services>
</container>
