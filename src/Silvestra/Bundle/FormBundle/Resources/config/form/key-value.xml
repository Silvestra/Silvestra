<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Silvestra key value row form type-->
        <service class="Silvestra\Component\Form\Type\KeyValueRowType">
            <tag name="form.type" alias="silvestra_key_value_row" />
        </service>

        <!--Silvestra key value form type-->
        <service class="Silvestra\Component\Form\Type\KeyValueType">
            <tag name="form.type" alias="silvestra_key_value" />
        </service>

    </services>
</container>
