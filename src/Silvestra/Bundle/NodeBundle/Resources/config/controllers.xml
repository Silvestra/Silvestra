<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Sitemap node controller-->
        <service id="silvestra_node.controller.node" class="Silvestra\Bundle\NodeBundle\Controller\NodeController">
            <argument type="service" id="silvestra_node.handler.node_delete" />
            <argument type="service" id="silvestra_node.form_factory.node" />
            <argument type="service" id="silvestra_node.form_handler.node" />
            <argument type="service" id="silvestra_node.manager.node" />
            <argument type="service" id="silvestra_node.helper.response" />
        </service>

        <!--Sitemap node content controller-->
        <service id="silvestra_node.controller.node_content" class="Silvestra\Bundle\NodeBundle\Controller\NodeContentController">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="silvestra_node.factory.node_event" />
            <argument type="service" id="silvestra_node.helper.response" />
            <argument type="service" id="silvestra_node.routing.helper" />
        </service>

        <!--Sitemap node online controller-->
        <service id="silvestra_node.controller.node_online" class="Silvestra\Bundle\NodeBundle\Controller\NodeOnlineController">
            <argument type="service" id="silvestra_node.manager.node" />
            <argument type="service" id="silvestra_node.handler.node_online" />
            <argument type="service" id="silvestra_node.helper.response" />
            <argument type="service" id="silvestra_node.routing.helper" />
        </service>

        <!--Sitemap node redirect controller-->
        <service id="silvestra_node.controller.node_redirect_route" class="Silvestra\Bundle\NodeBundle\Controller\NodeRedirectRouteController">
            <argument type="service" id="silvestra_node.form_factory.node_redirect_route" />
            <argument type="service" id="silvestra_node.form_handler.node_redirect_route" />
            <argument type="service" id="silvestra_node.helper.response" />
        </service>

        <!--Sitemap node route controller-->
        <service id="silvestra_node.controller.node_route" class="Silvestra\Bundle\NodeBundle\Controller\NodeRouteController">
            <argument type="service" id="silvestra_node.form_factory.node_route" />
            <argument type="service" id="silvestra_node.form_handler.node_route" />
            <argument type="service" id="silvestra_node.helper.response" />
            <argument type="service" id="silvestra_node.routing.helper" />
        </service>

        <!--Sitemap node seo controller-->
        <service id="silvestra_node.controller.node_seo" class="Silvestra\Bundle\NodeBundle\Controller\NodeSeoController">
            <argument type="service" id="silvestra_node.form_factory.node_seo" />
            <argument type="service" id="silvestra_node.form_handler.node_seo" />
            <argument type="service" id="silvestra_node.helper.response" />
        </service>

        <!--Sitemap preview controller-->
        <service id="silvestra_node.controller.preview" class="Silvestra\Bundle\NodeBundle\Controller\PreviewController">
            <argument type="service" id="http_kernel" />
            <argument type="service" id="tadcka_routing.manager.route" />
        </service>

        <!--Sitemap controller-->
        <service id="silvestra_node.controller.sitemap" class="Silvestra\Bundle\NodeBundle\Controller\SitemapController">
            <argument type="service" id="templating" />
            <argument type="service" id="translator" />
        </service>

        <!--Sitemap tree controller-->
        <service id="silvestra_node.controller.tree" class="Silvestra\Bundle\NodeBundle\Controller\TreeController">
            <argument type="service" id="silvestra_node.helper.response" />
            <argument type="service" id="silvestra_node.helper.tree" />
        </service>

    </services>
</container>
