<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_node.tree.config.class">Tadcka\Component\Tree\Registry\Tree\TreeConfig</parameter>
    </parameters>

    <services>

        <!--Tree registry-->
        <service id="silvestra_node.tree.registry" class="Tadcka\Component\Tree\Registry\Tree\TreeRegistry" public="false" />

        <!--Register sitemap tree-->
        <service class="%silvestra_node.tree.config.class%" public="false">
            <tag name="silvestra_node.tree.config" />
            <argument>silvestra_node</argument>
            <argument>silvestra_node</argument>
            <argument>/bundles/tadckasitemap/images/icon/sitemap.png</argument>
            <call method="setTranslationDomain">
                <argument>TadckaSitemapBundle</argument>
            </call>
        </service>

        <!--Tree provider-->
        <service id="silvestra_node.tree.provider" class="Tadcka\Component\Tree\Provider\TreeProvider" public="true">
            <argument type="service" id="silvestra_node.manager.tree" />
            <argument type="service" id="silvestra_node.tree.registry" />
        </service>

    </services>
</container>
