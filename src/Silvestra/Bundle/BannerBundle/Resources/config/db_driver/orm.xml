<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_banner.manager.banner.class">Silvestra\Bundle\BannerBundle\Doctrine\EntityManager\BannerManager</parameter>
        <parameter key="silvestra_banner.manager.banner_zone.class">Silvestra\Bundle\BannerBundle\Doctrine\EntityManager\BannerZoneManager</parameter>
    </parameters>

    <services>

        <!--Default Banner manager-->
        <service id="silvestra_banner.manager.banner.default" class="%silvestra_banner.manager.banner.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%silvestra_banner.model.banner.class%</argument>
        </service>

        <!--Default BannerZone manager-->
        <service id="silvestra_banner.manager.banner_zone.default" class="%silvestra_banner.manager.banner_zone.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%silvestra_banner.model.banner_zone.class%</argument>
        </service>

    </services>
</container>
