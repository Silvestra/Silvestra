<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_text_node.form_factory.text_node.class">Silvestra\Bundle\Text\NodeBundle\Form\Factory\TextNodeFormFactory</parameter>
        <parameter key="silvestra_text_node.form_handler.text_node.class">Silvestra\Bundle\Text\NodeBundle\Form\Handler\TextNodeFormHandler</parameter>
        <parameter key="silvestra_text_node.form_type.text_node.class">Silvestra\Bundle\Text\NodeBundle\Form\Type\TextNodeType</parameter>
    </parameters>

    <services>

        <!--Silvestra text node form factory-->
        <service id="silvestra_text_node.form_factory.text_node" class="%silvestra_text_node.form_factory.text_node.class%">
            <argument type="service" id="form.factory" />
            <argument type="service" id="router" />
        </service>

        <!--Silvestra text node form handler-->
        <service id="silvestra_text_node.form_handler.text_node" class="%silvestra_text_node.form_handler.text_node.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="silvestra_text_node.manager.text_node" />
            <argument type="service" id="translator" />
        </service>

        <!--Silvestra text node form type-->
        <service id="silvestra_text_node.form_type.text_node" class="%silvestra_text_node.form_type.text_node.class%">
            <tag name="form.type" alias="silvestra_text_node" />
            <argument>%silvestra_text_node.model.text_node.class%</argument>
        </service>

    </services>

</container>
