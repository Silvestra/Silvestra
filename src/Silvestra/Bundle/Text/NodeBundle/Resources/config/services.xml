<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="silvestra_text_node.event_listener.sitemap_node.class">Silvestra\Bundle\Text\NodeBundle\EventListener\SitemapNodeListener</parameter>
    </parameters>

    <services>

        <service id="silvestra_text_node.event_listener.sitemap_node" class="%silvestra_text_node.event_listener.sitemap_node.class%">
            <tag name="kernel.event_listener" event="tadcka_sitemap.node_edit" method="onSitemapNodeEdit" />
            <tag name="kernel.event_listener" event="tadcka_tree.node.pre_delete" method="onSitemapNodeDelete" />
            <argument type="service" id="silvestra_text.manager.text" />
            <argument type="service" id="silvestra_text_node.manager.text_node" />
        </service>

    </services>

</container>
